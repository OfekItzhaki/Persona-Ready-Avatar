# Azure Speech Service Configuration
# Get your Azure Speech API key from: https://portal.azure.com
AZURE_SPEECH_KEY=your_azure_speech_api_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Brain API Configuration
# The base URL for the Brain API that provides conversational AI responses
BRAIN_API_URL=http://localhost:8000

# Client-Side Configuration (NEXT_PUBLIC_* variables are exposed to the browser)
# Default 3D avatar model URL
NEXT_PUBLIC_AVATAR_MODEL_URL=/models/avatar.glb

# Ready Player Me Avatar URLs (at least 3 default options)
NEXT_PUBLIC_AVATAR_DEFAULT_1=https://models.readyplayer.me/65d3c8b8f3e4a2b3c4d5e6f7.glb
NEXT_PUBLIC_AVATAR_DEFAULT_2=https://models.readyplayer.me/65d3c8b8f3e4a2b3c4d5e6f8.glb
NEXT_PUBLIC_AVATAR_DEFAULT_3=https://models.readyplayer.me/65d3c8b8f3e4a2b3c4d5e6f9.glb

# Fallback Avatar Configuration
NEXT_PUBLIC_AVATAR_FALLBACK_TYPE=cube
NEXT_PUBLIC_AVATAR_FALLBACK_COLOR=#4A90E2

# Avatar Loading Configuration
NEXT_PUBLIC_AVATAR_LOAD_TIMEOUT=10000
NEXT_PUBLIC_AVATAR_MAX_RETRIES=3

# Logging Configuration
# Log level: debug, info, warn, error
NEXT_PUBLIC_LOG_LEVEL=info

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
